{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "target": "ESNext",
    "paths": {
      "@applets/*": ["applets/*"],
      "@shared/*": ["packages/shared/src/*"],
      "@packages/*": ["packages/*"],
      "@packages/admin/*": ["packages/admin/*"],
      "@witrino/*": ["apps/panel-witrino/src/*"],
      "@polotik/*": ["apps/panel-polotik/src/*"],
      "@packages/polotik/*": ["packages/polotik/*"]
    }
  },
  "include": ["./**/*.js", "./**/*.vue", "./**/*.json", "./**/*.scss"],
  "exclude": ["node_modules"]
}
